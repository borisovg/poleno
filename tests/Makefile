all: test

## clean: delete NPM packages and files generated by nyc
.PHONY: clean
clean:
	rm -rf \
		.nyc_* \
		coverage \
		node_modules \
	rm -f npm-debug.log

## test:  run tests
.PHONY: test
test: node_modules
	./node_modules/.bin/nyc \
		--all \
		--cwd ../ \
		--exclude tests/** \
		--reporter=html \
		--reporter=text \
		--cache-dir ./.nyc_cache \
		--temp-directory ./tests/.nyc_output \
		node_modules/.bin/mocha *.spec.js

node_modules: package.json
	npm update || (rm -rf node_modules; exit 1)
	touch node_modules

.PHONY: help
help:
	@echo
	@sed -n 's/^##//p' Makefile
	@echo
